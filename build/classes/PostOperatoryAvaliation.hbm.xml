<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://localhost/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
    <class name="entity.PostOperatoryAvaliation" table="post_operatory_avaliation">
        <meta attribute="class-description">
            This class contains the post operatory avaliation details. 
        </meta>
        <id name="id" type="long">
            <generator class="native"/>
        </id>
        <many-to-one name="patient" class="entity.Patient" column="patient_id" lazy="false" cascade="all"/>
        <property name="numberOfMeals" column="number_of_meals" type="int"/>
        <property name="timeBetweenMeals" column="time_between_meals" type="int"/>
        <property name="consistency" not-null="true">
            <type name="org.hibernate.type.EnumType">
                <param name="enumClass">entity.nonpersistable.Consistency</param>
            </type> 
        </property>
        <property name="ingestionCapacity" column="ingestion_capacity" not-null="true">
            <type name="org.hibernate.type.EnumType">
                <param name="enumClass">entity.nonpersistable.Periodicity</param>
            </type> 
        </property>        
        <property name="appetite" not-null="true">
            <type name="org.hibernate.type.EnumType">
                <param name="enumClass">entity.nonpersistable.Intensity</param>
            </type> 
        </property>
        <property name="weight" not-null="true">
            <type name="org.hibernate.type.EnumType">
                <param name="enumClass">entity.nonpersistable.Intensity</param>
            </type> 
        </property>
        <property name="dysphagia" not-null="true">
            <type name="org.hibernate.type.EnumType">
                <param name="enumClass">entity.nonpersistable.Periodicity</param>
            </type> 
        </property>
        <property name="pyrosis" not-null="true">
            <type name="org.hibernate.type.EnumType">
                <param name="enumClass">entity.nonpersistable.Periodicity</param>
            </type> 
        </property>
        <property name="diarrhea" not-null="true">
            <type name="org.hibernate.type.EnumType">
                <param name="enumClass">entity.nonpersistable.Periodicity</param>
            </type> 
        </property>
        <property name="abdominalPain" column="abdominal_pain" not-null="true">
            <type name="org.hibernate.type.EnumType">
                <param name="enumClass">entity.nonpersistable.Periodicity</param>
            </type> 
        </property>
        <property name="vomit" not-null="true">
            <type name="org.hibernate.type.EnumType">
                <param name="enumClass">entity.nonpersistable.Periodicity</param>
            </type> 
        </property>
        <property name="fulness" not-null="true">
            <type name="org.hibernate.type.EnumType">
                <param name="enumClass">entity.nonpersistable.Periodicity</param>
            </type> 
        </property>
        <property name="dumping" not-null="true">
            <type name="org.hibernate.type.EnumType">
                <param name="enumClass">entity.nonpersistable.Periodicity</param>
            </type> 
        </property>
        <property name="totalScore" column="total_score" type="int" not-null="true"/>
        <property name="comments" type="string"/>
        <property name="createdAt" column="created_at" type="date"/>
        <property name="updatedAt" column="updated_at" type="date"/>
        <property name="active" type="boolean"/>
    </class>
</hibernate-mapping>