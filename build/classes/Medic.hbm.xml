<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://localhost/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
    <class name="entity.Medic" table="medic">
        <meta attribute="class-description">
            This class contains the medic details. 
        </meta>
        <id name="id" type="long">
            <generator class="native"/>
        </id>
        <set name="patients" table="patient" inverse="true" lazy="true" fetch="join" cascade="all,delete-orphan">
            <key>
                <column name="medic_id" not-null="true" />
            </key>
            <one-to-many class="entity.Patient" />
        </set>
        <many-to-one name="address" class="entity.Address" column="address_id" lazy="false" cascade="all"/>
        <many-to-one name="institution" class="entity.Institution" column="institution_id" lazy="false" cascade="all"/>
        <many-to-one name="avatar" class="entity.Avatar" column="avatar_id" lazy="false" cascade="all"/>
        <property name="name" type="string"/>
        <property name="email" type="string"/>
        <property name="phone" type="string"/>
        <property name="createdAt" column="created_at" type="date"/>
        <property name="updatedAt" column="updated_at" type="date"/>
        <property name="active" type="boolean"/>
    </class>
</hibernate-mapping>